@model WMart.Models.GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>
<!-- NEW FILE -->
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RsvpForm</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    

    
    @*<link href="~/Style/background.css" rel="stylesheet" />*@
   

</head>
<body style="background-color:#aacddc; overflow-x:hidden">
    @using (Html.BeginForm("RsvpForm", "Home", FormMethod.Post) )
    {
       <div id="Form">
           <div class="container">
               <div class="page-header">
                   <h1>  <img src="~/scripts/Images/logo.png" width="70" height="60" ; /><span style="margin-top:3em"> WMart</span></h1>

               </div>
               <div>
                   <h2>Employee Data</h2>
                   <p>
                       Basic Details of all Employees working in WMart IT Deparment
                   </p>


               </div>



           </div>

           <div class="jumbotron">
               <div class="row">

                   <div class="form-group">

                       <div class="col-md-4 col-md-offset-1 inputGroupContainer">
                           <div class="input-group">
                               <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                               @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Enter Name", Id="Name" })
                           </div>
                       </div>

                   </div>

               </div><!-- /.row -->
               <br />

               <div class="row">
                   <div class="form-group">

                       <div class="col-md-4 col-md-offset-1 inputGroupContainer">
                           <div class="input-group">
                               <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                               @Html.TextBoxFor(x => x.CEmail, new { @class = "form-control", placeholder = "Enter Your Email", Id="Email" })
                           </div>
                       </div>

                   </div>



               </div><!-- /.row -->
               <br />
               <div class="row">
                   <div class="form-group">

                       <div class="col-md-4 col-md-offset-1 inputGroupContainer">
                           <div class="input-group">
                               <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
                               @Html.TextBoxFor(x => x.CPhone, new { @class = "form-control", placeholder = "Enter Your Mobile number", Id="Phone" })
                           </div>
                       </div>

                   </div>


               </div><!-- /.row -->
               <br />
               <div class="row">
                   <div class="form-group">
                       <div class="col-md-4 col-md-offset-1 inputGroupContainer">
                           <div class="input-group">
                               <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                               @Html.DropDownListFor(m => m.Status, new List<SelectListItem> { new SelectListItem { Text = "Yes I will Attend", Value = "Yes" }, new SelectListItem { Text = "No I will not be there", Value = "No" } }, new { @class = "form-control", Id="drpdown" })
                           </div>
                       </div>
                   </div>-

               </div><!- /.row -->
               <br /><div class="row">
                   <div class="col-md-4 col-md-offset-1">

                       @Html.ActionLink("Submit", "RsvpForm", "Home", new { area = "" }, new { @class = "btn btn-primary btn-lg btn-block" })
                   </div>
               </div>

           </div>
       </div> 
        
        
       
    }


</body>

</html>
